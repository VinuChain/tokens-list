{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/VinuChain/vinuchain-tokens/schemas/contract.schema.json",
  "title": "Contract",
  "description": "Schema for VinuChain contract entries",
  "type": "object",
  "required": [
    "project",
    "name",
    "contract"
  ],
  "properties": {
    "project": {
      "type": "string",
      "description": "Reference to the project file (without .json extension)",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "minLength": 1,
      "maxLength": 100
    },
    "name": {
      "type": "string",
      "description": "User-friendly name for the contract",
      "minLength": 1,
      "maxLength": 200
    },
    "contract": {
      "type": "string",
      "description": "Contract name as it appears in the source code",
      "minLength": 1,
      "maxLength": 100
    },
    "source": {
      "type": "string",
      "description": "HTTPS URL to the contract source code or documentation",
      "pattern": "^https://.*",
      "maxLength": 500
    },
    "tags": {
      "type": "array",
      "description": "Tags describing the contract type or functionality",
      "items": {
        "type": "string",
        "enum": [
          "factory",
          "proxy",
          "implementation",
          "token",
          "nft",
          "erc20",
          "erc721",
          "erc1155",
          "governance",
          "staking",
          "vault",
          "router",
          "oracle",
          "bridge",
          "multisig",
          "timelock"
        ]
      },
      "uniqueItems": true,
      "maxItems": 10
    },
    "features": {
      "type": "object",
      "description": "Additional features or metadata about the contract",
      "additionalProperties": {
        "anyOf": [
          {"type": "string", "maxLength": 500},
          {"type": "number"},
          {"type": "boolean"}
        ]
      },
      "maxProperties": 20
    }
  },
  "additionalProperties": false
}
