{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/VinuChain/vinuchain-tokens/schemas/contract.schema.json",
  "title": "Contract",
  "description": "Schema for VinuChain contract entries",
  "type": "object",
  "required": [
    "project",
    "name",
    "contract"
  ],
  "properties": {
    "project": {
      "type": "string",
      "description": "Reference to the project file (without .json extension)",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "User-friendly name for the contract",
      "minLength": 1
    },
    "contract": {
      "type": "string",
      "description": "Contract name as it appears in the source code",
      "minLength": 1
    },
    "source": {
      "type": "string",
      "description": "URL to the contract source code or documentation",
      "format": "uri"
    },
    "tags": {
      "type": "array",
      "description": "Tags describing the contract type or functionality",
      "items": {
        "type": "string",
        "enum": [
          "factory",
          "proxy",
          "implementation",
          "token",
          "nft",
          "erc20",
          "erc721",
          "erc1155",
          "governance",
          "staking",
          "vault",
          "router",
          "oracle",
          "bridge",
          "multisig",
          "timelock"
        ]
      },
      "uniqueItems": true
    },
    "features": {
      "type": "object",
      "description": "Additional features or metadata about the contract",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
