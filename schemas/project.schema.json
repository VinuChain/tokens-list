{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/VinuChain/vinuchain-tokens/schemas/project.schema.json",
  "title": "Project",
  "description": "Schema for VinuChain project entries",
  "type": "object",
  "required": [
    "name",
    "website"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Project or organization name",
      "minLength": 1,
      "maxLength": 200
    },
    "website": {
      "type": "string",
      "description": "Main website HTTPS URL",
      "pattern": "^https://.*",
      "maxLength": 500
    },
    "description": {
      "type": "string",
      "description": "Brief description of the project",
      "maxLength": 1000
    },
    "contact": {
      "type": "string",
      "description": "General contact email",
      "format": "email"
    },
    "security": {
      "type": "string",
      "description": "Security contact email for vulnerability disclosure",
      "format": "email"
    },
    "token": {
      "type": "object",
      "description": "Primary token information",
      "required": [
        "chainId",
        "address",
        "symbol",
        "decimals"
      ],
      "properties": {
        "chainId": {
          "type": "integer",
          "description": "EIP155 chain ID where the token is deployed",
          "enum": [26600],
          "minimum": 1
        },
        "address": {
          "type": "string",
          "description": "EIP55 checksummed token contract address",
          "pattern": "^0x[a-fA-F0-9]{40}$"
        },
        "symbol": {
          "type": "string",
          "description": "Token symbol",
          "minLength": 1,
          "maxLength": 20
        },
        "name": {
          "type": "string",
          "description": "Token name",
          "maxLength": 100
        },
        "decimals": {
          "type": "integer",
          "description": "Number of decimal places",
          "minimum": 0,
          "maximum": 18
        },
        "logoURI": {
          "type": "string",
          "description": "HTTPS URL to token logo image (PNG/SVG)",
          "pattern": "^https://.*\\.(png|svg|jpg|jpeg|webp)$",
          "maxLength": 500
        }
      },
      "additionalProperties": false
    },
    "social": {
      "type": "object",
      "description": "Social media and community links",
      "properties": {
        "github": {
          "type": "string",
          "description": "GitHub organization or repository HTTPS URL",
          "pattern": "^https://github\\.com/.*",
          "maxLength": 500
        },
        "twitter": {
          "type": "string",
          "description": "Twitter/X profile HTTPS URL",
          "pattern": "^https://(twitter\\.com|x\\.com)/.*",
          "maxLength": 500
        },
        "telegram": {
          "type": "string",
          "description": "Telegram channel or group URL",
          "pattern": "^https://t\\.me/.*",
          "maxLength": 500
        },
        "discord": {
          "type": "string",
          "description": "Discord server invite HTTPS URL",
          "pattern": "^https://(discord\\.gg|discord\\.com/invite)/.*",
          "maxLength": 500
        },
        "medium": {
          "type": "string",
          "description": "Medium publication HTTPS URL",
          "pattern": "^https://.*\\.?medium\\.com/.*",
          "maxLength": 500
        },
        "coingecko": {
          "type": "string",
          "description": "CoinGecko listing HTTPS URL",
          "pattern": "^https://www\\.coingecko\\.com/.*",
          "maxLength": 500
        },
        "coinmarketcap": {
          "type": "string",
          "description": "CoinMarketCap listing HTTPS URL",
          "pattern": "^https://coinmarketcap\\.com/.*",
          "maxLength": 500
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
